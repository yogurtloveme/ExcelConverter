<Window x:Class="ExcelConverter.ConvertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ConvertDialog" 
        Height="420"
        Width="540"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}"
        Loaded="OnWindowsLoaded"
        Closed="OnWindowsClosed">

    <Grid Width="Auto">
        <ScrollViewer Name="TextScroll" Width="Auto" Margin="10, 5, 10, 0" Height="Auto" VerticalAlignment="Top">

            <TextBlock Name="ConvertOutputText" TextWrapping="Wrap" Text="" VerticalAlignment="Top"></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
